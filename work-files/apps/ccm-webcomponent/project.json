{
  "name": "ccm-webcomponent",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "generators": {
    "@schematics/angular:component": {
      "style": "scss"
    }
  },
  "sourceRoot": "apps/ccm-webcomponent/src",
  "prefix": "app",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "options": {
        "outputPath": "dist/apps/ccm-webcomponent",
        "index": "apps/ccm-webcomponent/src/index.html",
        "main": "apps/ccm-webcomponent/src/main.ts",
        "polyfills": "apps/ccm-webcomponent/src/polyfills.ts",
        "tsConfig": "apps/ccm-webcomponent/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/ccm-webcomponent/src/favicon.ico",
          "apps/ccm-webcomponent/src/assets",
          {
            "glob": "pro-*-svg-icons/*.js",
            "input": "./node_modules/@fortawesome/",
            "output": "/assets/icons/"
          }
        ],
        "styles": [
          "apps/ccm-webcomponent/src/styles.scss",
          "node_modules/quill/dist/quill.snow.css",
          "node_modules/ag-grid-community/styles/ag-grid.css",
          "node_modules/ag-grid-community/styles/ag-theme-alpine.css"
        ],
        "scripts": ["node_modules/@finra/ctl-common/ctl-common.js"]
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "20mb",
              "maximumError": "30mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "300kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/ccm-webcomponent/src/environments/environment.ts",
              "with": "apps/ccm-webcomponent/src/environments/environment.prod.ts"
            },
            {
              "replace": "apps/ccm-webcomponent/src/environments/build-info.json",
              "with": "generated/build-info.json"
            }
          ],
          "outputHashing": "none"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "ccm-webcomponent:build:production"
        },
        "development": {
          "browserTarget": "ccm-webcomponent:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "ccm-webcomponent:build"
      }
    },
    "test": {
      "executor": "@angular-devkit/build-angular:karma",
      "options": {
        "codeCoverage": true,
        "main": "apps/ccm-webcomponent/src/test.ts",
        "polyfills": "apps/ccm-webcomponent/src/polyfills.ts",
        "tsConfig": "apps/ccm-webcomponent/tsconfig.spec.json",
        "karmaConfig": "apps/ccm-webcomponent/karma.conf.js",
        "inlineStyleLanguage": "scss",
        "assets": ["apps/ccm-webcomponent/src/favicon.ico", "apps/ccm-webcomponent/src/assets"],
        "styles": ["apps/ccm-webcomponent/src/styles.scss"],
        "scripts": []
      }
    }
  }
}
